<div class="col-sm-4 header_right">
    <div id="loginContainer">
        <a href="#" id="loginButton"><img src="~/Content/images/login.png"><span>Login</span></a>
        <div id="loginBox">
            <form id="loginForm">

                <fieldset id="body">

                    <fieldset>
                        @Html.Label("E-mail")
                        @Html.TextBox("teste", null)
                    </fieldset>

                    <fieldset>
                        @Html.Label("Senha")
                        @Html.TextBox("te1ste", null)
                    </fieldset>

                    <input type="submit" id="login" value="Sign in">
                    <label for="checkbox"><input type="checkbox" id="checkbox"> <i>Lembrar senha</i></label>

                </fieldset>

                <span><a href="#">Esqueceu sua senha?</a></span>

            </form>
        </div>
    </div>
    <div class="clearfix"></div>
</div>